{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build:pre",
    "beforeDevCommand": "npm run start:ui",
    "frontendDist": "../dist/oyasumivr",
    "devUrl": "http://localhost:4200"
  },
  "bundle": {
    "active": true,
    "category": "Utility",
    "copyright": "Copyright (c) 2022 Raphiiko",
    "targets": [
      "nsis"
    ],
    "resources": [
      "./openvr_api.dll",
      "./flags.toml",
      "./steam_api64.dll",
      "./resources/**/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Raphiiko",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "nsis": {
        "languages": [
          "English",
          "French",
          "Japanese",
          "Dutch",
          "Korean",
          "SimpChinese",
          "TradChinese",
          "Indonesian",
          "Spanish"
        ],
        "installerIcon": "icons/icon.ico",
        "headerImage": "images/installer_header.bmp",
        "sidebarImage": "images/installer_sidebar.bmp",
        "displayLanguageSelector": true,
        "installMode": "both"
      }
    },
    "longDescription": "",
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "shortDescription": "OyasumiVR",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "licenseFile": "../LICENSE.md",
    "createUpdaterArtifacts": "v1Compatible"
  },
  "productName": "OyasumiVR",
  "mainBinaryName": "OyasumiVR",
  "version": "1.15.0",
  "identifier": "co.raphii.oyasumi",
  "plugins": {
    "cli": {
      "description": "OyasumiVR - VR Sleep Utilities",
      "longDescription": "",
      "beforeHelp": "",
      "afterHelp": "",
      "args": [
        {
          "name": "core-mode",
          "short": "c",
          "description": "Mode for running the core module",
          "longDescription": "See developer notes for more information",
          "maxValues": 1,
          "takesValue": true,
          "possibleValues": [
            "release",
            "dev"
          ]
        },
        {
          "name": "overlay-sidecar-mode",
          "short": "o",
          "description": "Mode for handling the overlay sidecar",
          "longDescription": "See developer notes for more information",
          "maxValues": 1,
          "takesValue": true,
          "possibleValues": [
            "release",
            "dev"
          ]
        },
        {
          "name": "mdns-sidecar-mode",
          "short": "m",
          "description": "Mode for handling the mdns sidecar",
          "longDescription": "See developer notes for more information",
          "maxValues": 1,
          "takesValue": true,
          "possibleValues": [
            "release",
            "dev"
          ]
        }
      ]
    },
    "deep-link": {
      "desktop": {
        "schemes": ["oyasumivr"]
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEVGOEI4QTQ2Rjk1NEMwNTUKUldSVndGVDVSb3FMN3hIanNsbVVDdVk1MkE2MVpVWERJeTdUVVRzZ1JpanVQTmNXYWJGVHhUSVIK",
      "endpoints": [
        "https://gist.githubusercontent.com/Raphiiko/16ed38d8ccd9282675d04478f887f76f/raw"
      ]
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "fullscreen": false,
        "height": 620,
        "decorations": false,
        "resizable": true,
        "title": "OyasumiVR",
        "width": 980,
        "minWidth": 980,
        "minHeight": 662,
        "visible": false,
        "center": true,
        "theme": "Dark",
        "transparent": true,
        "userAgent": "OyasumiVR/1.15.0 (https://github.com/Raphiiko/OyasumiVR)",
        "useHttpsScheme": false
      },
      {
        "width": 700,
        "height": 475,
        "decorations": false,
        "url": "assets/splashscreen/splashscreen.html",
        "label": "splashscreen",
        "resizable": false,
        "center": true,
        "theme": "Dark",
        "transparent": true,
        "skipTaskbar": true,
        "minimizable": false,
        "alwaysOnTop": true,
        "userAgent": "OyasumiVR/1.15.0 (https://github.com/Raphiiko/OyasumiVR)",
        "useHttpsScheme": false
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "security": {
      "csp": null
    }
  }
}